#include <stdio.h>
#include <locale.h> 
int main()
{
    setlocale (LC_ALL, "portuguese"); 
    int num; 
    printf ("Digite um número qualquer:"); 
    scanf ("%i", &num); 
    if (num < 0) { 
        printf ("Negativo!"); 
         } else {
             if (num>0) { 
                 printf ("positivo!"); 
             } else { 
                  printf ("È neutro!"); 
             }              
      } 
}
